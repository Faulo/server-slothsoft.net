<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module" version="1.1">
	<resource-directory name="css" path="css" type="text/css" />
	<resource-directory name="js" path="js" type="application/javascript" />
	<resource-directory name="xsl" path="xsl" type="application/xslt+xml" />

	<directory name="static">
		<resource-directory name="games" path="games" type="application/xml" />
	</directory>

	<fragment name="html">
		<fragment name="home">
			<use-template ref="/dragonage/xsl/home" />
		</fragment>
		<fragment name="combos">
			<import ref="//slothsoft@farah/api/DOM" />
			<use-template ref="/dragonage/xsl/_combos" />
			<link-stylesheet ref="/dragonage/css/default" />
			<link-script ref="/dragonage/js/ComboManager" />
			<use-document ref="/dragonage/static/games" name="games" />
		</fragment>
	</fragment>
</assets>
